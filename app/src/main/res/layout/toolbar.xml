<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:layout_marginBottom="@dimen/dp_2_y"-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54_y"
        android:background="@color/gray"
        app:popupTheme="@style/ToolbarPopupTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <com.txtled.gp_a012.widget.CustomTextView
            android:id="@+id/tv_title"
            style="@style/main_tv"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/dp_20_x" />

        <ImageView
            android:id="@+id/iv_right"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_16_x"
            android:src="@mipmap/ic_home_rightmenu" />

        <com.txtled.gp_a012.widget.CustomTextView
            android:visibility="gone"
            android:id="@+id/tv_save"
            style="@style/main_tv"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_16_x"
            android:text=""/>
        <CheckBox
            android:id="@+id/_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_16_x"
            android:button="@null"
            android:background="@drawable/toolbar_on_off"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
