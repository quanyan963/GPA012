<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_16_y">

    <com.txtled.gp_a012.widget.CustomTextView
        android:id="@+id/tv_hint"
        style="@style/main_tv"
        android:gravity="center_vertical"
        android:text="@string/dis_open_device_hint"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hint"
        android:layout_marginTop="@dimen/dp_16_y">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.txtled.gp_a012.widget.CustomTextView
            style="@style/main_tv"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/checkbox"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_4_x"
            android:text="@string/no_hint"
            android:textColor="@color/black" />
    </RelativeLayout>
</RelativeLayout>
